{{ header }}{{ column_left }}
<div id="content">
   <div class="page-header">
      <div class="container-fluid">
         <div class="float-end">
            <button type="submit" form="form_module" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fas fa-save"></i></button>
            <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fas fa-reply"></i></a>
         </div>
         <h1>{{ heading_title }}</h1>
         <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
            <li class="breadcrumb-item"><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
            {% endfor %}
         </ul>
      </div>
   </div>
   <div class="container-fluid">
      {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> {{ error_warning }}
         <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
      {% endif %}
      <div class="card">
         <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
         <div class="card-body">  
            <form action="{{ save }}" method="post" enctype="multipart/form-data" id="form_module" data-oc-toggle="ajax">
               <ul class="nav nav-tabs">
                  <li class="nav-item"><a href="#tab_general" data-bs-toggle="tab" class="nav-link active">{{ text_general }}</a></li>
                  {% for page in setting['page'] %}
                  <li class="nav-item"><a href="#tab_{{ page['code'] }}" data-bs-toggle="tab" class="nav-link">{{ attribute(_context, page['name']) }}</a></li>
                  {% endfor %}
               </ul>
               
               <div class="tab-content">
                  <div class="tab-pane active" id="tab_general">

                     <div class="row mb-3">
                        <label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
                        <div class="col-sm-10">
                        <div class="form-check form-switch form-switch-lg">
                           <input type="hidden" name="module_themability_search_status" value="0"/>
                           <input type="checkbox" name="module_themability_search_status" value="1" id="input-status" class="form-check-input"{% if module_themability_search_status %} checked{% endif %}/>
                        </div>
                        </div>
                     </div>

                     <div class="row mb-3">
                        <label for="input-autocomplete-search" class="col-sm-2 col-form-label">{{ entry_autocomplete }}</label>
                        <div class="col-sm-10">
                        <div class="form-check form-switch form-switch-lg">
                           <input type="hidden" name="module_themability_search_autocomplete" value="0"/>
                           <input type="checkbox" name="module_themability_search_autocomplete" value="1" id="input-autocomplete-search" class="form-check-input"{% if module_themability_search_autocomplete %} checked{% endif %}/>
                        </div>
                        </div>
                     </div>                   

                      <div class="row mb-3">
                        <label for="input-autocomplete-search-category" class="col-sm-2 col-form-label">{{ entry_category }}</label>
                        <div class="col-sm-10">
                        <div class="form-check form-switch form-switch-lg">
                           <input type="hidden" name="module_themability_search_category" value="0"/>
                           <input type="checkbox" name="module_themability_search_category" value="1" id="input-autocomplete-search-category" class="form-check-input"{% if module_themability_search_category %} checked{% endif %}/>
                        </div>
                        </div>
                     </div>

                  </div>                 
               </div>
            </form>
         </div>
      </div>
   </div>
</div>
{{ footer }}