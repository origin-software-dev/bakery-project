{{ header }}{{ column_left }}
<div id="content">
   <div class="page-header">
      <div class="container-fluid">
         <div class="float-end">
            <a href="{{ themability_bloggerlist }}" data-bs-toggle="tooltip" title="{{ text_list }}" class="btn btn-light"><i class="fa fa-list"></i></a>
            <button type="submit" form="form-themability-blogger" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fas fa-save"></i></button>
            <a href="{{ cancel }}" data-bs-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-light" id="back_btn"><i class="fas fa-reply"></i></a>
         </div>
         <h1>{{ heading_title }}</h1>
         <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
            <li class="breadcrumb-item"><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
            {% endfor %}
         </ul>
      </div>
   </div>
   
   <div class="container-fluid">
      <div class="card">
         <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
         <div class="card-body">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-themability-blogger" data-oc-toggle="ajax">
               <input type="hidden" name="module_id" value="{{ module_id }}" />
               <div class="form-group required row mb-3">
                  <label class="col-sm-2 col-form-label" for="input-name"><span data-bs-toggle="tooltip" title="{{ entry_name }}">{{ entry_name }}</span></label>
                  <div class="col-sm-10">
                     <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
                     <div id="error-name" class="invalid-feedback"></div>
                  </div>
               </div>

               <div class="row mb-3">
                  <label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
                  <div class="col-sm-10">
                  <div class="form-check form-switch form-switch-lg">
                     <input type="hidden" name="status" value="0"/>
                     <input type="checkbox" name="status" value="1" id="input-status" class="form-check-input"{% if status %} checked{% endif %}/>
                  </div>
                  </div>
               </div>

               <div class="form-group required row mb-3">
                  <label class="col-sm-2 col-form-label" for="input-width"><span data-bs-toggle="tooltip" title="{{ help_image }}">{{ entry_image_size }}</span></label>
                  <div class="col-sm-5">
                     <input type="text" name="width" value="{{ width }}" placeholder="{{ entry_width }}" id="input-width" class="form-control" />
                     <div id="error-width" class="invalid-feedback"></div>
                  </div>
                  <div class="col-sm-5">
                     <input type="text" name="height" value="{{ height }}" placeholder="{{ entry_height }}" id="input-height" class="form-control" />
                     <div id="error-height" class="invalid-feedback"></div>
                  </div>
                  <div class="col-sm-2"></div>
                  <div class="col-sm-10">
                     <div class="text-left" style="margin-top: 10px;"><b>{{ text_size_note }}</b></div>
                  </div>
               </div>
               
               <div class="form-group required row mb-3">
                  <label class="col-sm-2 col-form-label" for="input-width"><span data-bs-toggle="tooltip" title="{{ help_banner_image }}">{{ entry_banner_image_size }}</span></label>
                  <div class="col-sm-5">
                     <input type="text" name="banner_width" value="{{ banner_width }}" placeholder="{{ entry_banner_width }}" id="input-banner-width" class="form-control" />
                     <div id="error-banner-width" class="invalid-feedback"></div>
                  </div>
                  <div class="col-sm-5">
                     <input type="text" name="banner_height" value="{{ banner_height }}" placeholder="{{ entry_banner_height }}" id="input-banner-height" class="form-control" />
                     <div id="error-banner-height" class="invalid-feedback"></div>
                  </div>
                  <div class="col-sm-2"></div>
                  <div class="col-sm-10">
                     <div class="text-left" style="margin-top: 10px;"><b>{{ text_banner_size_note }}</b></div>
                  </div>
               </div>

               <div class="form-group required row mb-3">
                  <label class="col-sm-2 col-form-label" for="input-limit"><span data-bs-toggle="tooltip" title="{{ help_limit }}">{{ entry_limit }}</span></label>
                  <div class="col-sm-10">
                     <input type="text" name="limit" value="{{ limit }}" placeholder="{{ entry_limit }}" id="input-limit" class="form-control" />
                     <div id="error-limit" class="invalid-feedback"></div>
                  </div>
               </div>
               
               <div class="form-group required row mb-3">
                  <label class="col-sm-2 col-form-label" for="input-limit"><span data-bs-toggle="tooltip" title="{{ help_char_limit }}">{{ entry_char_limit }}</span></label>
                  <div class="col-sm-10">
                     <input type="text" name="char_limit" value="{{ char_limit }}" placeholder="{{ entry_char_limit }}" id="input-char-limit" class="form-control" />
                     <div id="error-char-limit" class="invalid-feedback"></div>
                  </div>
               </div>          

               <div class="form-group required row mb-3">
                  <label class="col-sm-2 col-form-label" for="input-comments"><span data-bs-toggle="tooltip" title="{{ help_allow_comments }}">{{ entry_allow_comments }}</span></label>
                  <div class="col-sm-10">
                     <div class="form-check form-switch form-switch-lg">
                        <input type="hidden" name="comments" value="0"/>
                        <input type="checkbox" name="comments" value="1" id="input-comments" class="form-check-input"{% if comments %} checked{% endif %}/>
                     </div>
                  </div>
               </div> 

               <div class="form-group required row mb-3">
                  <label class="col-sm-2 col-form-label" for="input-login"><span data-bs-toggle="tooltip" title="{{ help_login_required }}">{{ entry_login_required }}</span></label>
                  <div class="col-sm-10">
                     <div class="form-check form-switch form-switch-lg">
                        <input type="hidden" name="login" value="0"/>
                        <input type="checkbox" name="login" value="1" id="input-login" class="form-check-input"{% if login %} checked{% endif %}/>
                     </div>
                  </div>
               </div>
    
                <div class="form-group required row mb-3">
                  <label class="col-sm-2 col-form-label" for="input-login"><span data-bs-toggle="tooltip" title="{{ help_auto_approve }}">{{ entry_auto_approve }}</span></label>
                  <div class="col-sm-10">
                     <div class="form-check form-switch form-switch-lg">
                        <input type="hidden" name="auto_approve" value="0"/>
                        <input type="checkbox" name="auto_approve" value="1" id="input-auto_approve" class="form-check-input"{% if auto_approve %} checked{% endif %}/>
                     </div>
                  </div>
               </div>

               <div class="form-group row mb-3">
                  <div class="col-sm-12"><span style="color: #fff; background: #1e91cf; letter-spacing: 0.1px; padding: 5px 15px;">{{ entry_blogpage_items }} </span></div>                  
               </div>

               <table class="table table-striped table-bordered table-hover">
                  <thead>
                     <tr>
                        <td class="text-left">{{ column_title }}</td>
                        <td class="text-left">{{ column_status }}</td>
                        <td class="text-right">{{ column_comments }}</td>
                        <td class="text-right">{{ column_date_added }}</td>
                        <td class="text-right">{{ column_action }}</td>
                     </tr>
                  </thead>
                  {% if themability_blogger_entries %} 
                  <tbody>
                     {% for entry in themability_blogger_entries %} 
                     <tr>
                        <td class="text-left">{{ entry.title }}</td>
                        <td class="text-left">{{ entry.status }}</td>
                        <td class="text-right">{{ entry.total_comments }}</td>
                        <td class="text-right">{{ entry.date_added }}</td>
                        <td class="text-right">
                           {# <a onclick="confirm('{{ text_confirm }} ') ? location.href='{{ entry.delete }} ' : false;" data-bs-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></a> #}
                           <button type="submit" class="delete_themability_blog_btn btn btn-danger" form="delete_themability_blog" formaction="{{ entry.delete }}" data-bs-toggle="tooltip" title="{{ button_delete }}"><i class="fa fa-minus-circle"></i></button>                           
                           <a href="{{ entry.comments }}" data-bs-toggle="tooltip" title="{{ button_comments }}" class="btn btn-info"><i class="fa fa-eye"></i></a>
                           <a href="{{ entry.edit }}" data-bs-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                        </td>
                     </tr>
                     {% endfor %}  
                  </tbody>
                  {% endif %} 
                  <tfoot>
                     {% if add_blog %} 
                     <tr>
                        <td class="text-right" colspan="5"><button type="button" onclick="location = '{{ add_blog }} ';" data-bs-toggle="tooltip" title="{{ button_add_blog }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                     </tr>
                     {% else %}   
                     <tr>
                        <td class="text-center" colspan="5">{{ text_save_module }}</td>
                     </tr>
                     {% endif %} 
                  </tfoot>
               </table>

            </form>

               <script>
               $( document ).ready(function() {
                  $( ".delete_themability_blog_btn" ).click(function(e) {
                     e.preventDefault();
                     if (!confirm('{{ text_confirm }}')) return false;
                     var this_url = jQuery(this).attr("formaction");
                     {# console.log(this_url); #}
                     
                     $.ajax({
                        url: this_url,
                        dataType: 'json',
                        success: function (json) {
                           $('.alert-dismissible').remove();
                           {# console.log(json); #}
                           if (json['redirect']) {
                              location = json['redirect'];
                           }
                           if (json['error']) {
                              $('#alert').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa-solid fa-circle-exclamation"></i> ' + json['error'] + ' <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
                           }
                           if (json['success']) {
                              $('#alert').prepend('<div class="alert alert-success alert-dismissible"><i class="fa-solid fa-circle-exclamation"></i> ' + json['success'] + ' <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
                              {# location = this_url; #}
                           }
                        },
                        error: function (xhr, ajaxOptions, thrownError) {
                           console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                        }
                     });
                  });
                  
               });
               </script>

         </div>
      </div>
   </div>
</div>
{{ footer }}