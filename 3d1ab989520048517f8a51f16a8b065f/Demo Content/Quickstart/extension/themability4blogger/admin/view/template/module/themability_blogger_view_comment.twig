{{ header }}{{ column_left }} 
<div id="content">   
   <div class="page-header">
      <div class="container-fluid">
         <div class="float-end">
            <a href="{{ return }}" data-bs-toggle="tooltip" title="{{ button_return }}" class="btn btn-light" id="back_btn"><i class="fas fa-reply"></i></a>
         </div>
         <h1>{{ heading_title }}</h1>
         <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
            <li class="breadcrumb-item"><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
            {% endfor %}
         </ul>
      </div>
   </div>

   <div class="container-fluid">
      <div class="card card-default">
         <div class="card-body blog_view_comment">
            <div class="row mb-3">
               <label class="col-sm-3 col-form-label">{{ text_author }}: </label>
               <div class="col-sm-8">{{ author }}</div>
            </div>
            <div class="row mb-3">
               <label class="col-sm-3 col-form-label">{{ text_email }}: </label>
               <div class="col-sm-8">{{ email }}</div>
            </div>
            <div class="row mb-3">
               <label class="col-sm-3 col-form-label">{{ text_date_added }}: </label>
               <div class="col-sm-8">{{ date_added }}</div>
            </div>
            <div class="tab-content">
               <div id="tab-general" class="tab-pane active">
                 <ul class="nav nav-tabs">
                   {% for language in languages %}
                     <li class="nav-item"><a href="#language-{{ language.language_id }}" data-bs-toggle="tab" class="nav-link{% if loop.first %} active{% endif %}"><img src="{{ language.image }}" title="{{ language.name }}"/> {{ language.name }}</a></li>
                   {% endfor %}
                 </ul>
                 <div class="tab-content">
                   {% for language in languages %}
                     <div id="language-{{ language.language_id }}" class="tab-pane{% if loop.first %} active{% endif %}">
                        <div class="row mb-3">
                           <label class="col-sm-2 col-form-label">{{ text_comment }}: </label>
                           <div class="col-sm-10">
                              {{ comment_descriptions[language['language_id']] is defined ? comment_descriptions[language['language_id']]['comment'] : '' }} 
                           </div>
                        </div>
                     </div>
                   {% endfor %}
                 </div>
               </div>
            </div>           
         </div>
      </div>
   </div>
</div>
<script type="text/javascript"><!--
   $('#language a:first').tab('show');
   //-->
</script>
<style type="text/css">
.blog_view_comment label {
    padding-top: 0;
    padding-bottom: 0;
}</style>
{{ footer }}